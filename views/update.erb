
<form action='/update/<%=@videos['id'] %> ' method='post'>
  <input type="text" name="title" value="<%=@videos['title'] %>" placeholder="Video title">
  
  <input type="text" name="description" value="<%= @videos['description'] %>" placeholder="Description">
  
  <input type="text" name="url" value="<%= @videos['url'] %>" placeholder="url">

  <input type="text" name="genre" value="<%= @videos['genre'] %> placeholder="Genre"">
  <button class="button">Update</button>
</form>

<iframe src="//www.youtube.com/embed/<%= parse_youtube(@videos['url']) %> " frameborder="0" allowfullscreen></iframe>